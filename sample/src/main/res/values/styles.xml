<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="alertDialogTheme">@style/MyAlertDialogStyle</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#7f8c8d</item>
        <item name="android:textColorPrimary">#bdc3c7</item>
        <item name="android:background">#e74c3c</item>
    </style>

    <style name="MyAlertDialogStyle2" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#f1c40f</item>
        <item name="android:textColorPrimary">#ecf0f1</item>
        <item name="android:background">#2980b9</item>
    </style>

</resources>
